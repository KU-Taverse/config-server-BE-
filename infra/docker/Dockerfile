FROM openjdk:17-jdk

ARG JAR_FILE=../../build/libs/*.jar


ARG GOOGLE_ID
ARG GOOGLE_SECRET
ARG KAKAO_ID
ARG KAKAO_SECRET

COPY ${JAR_FILE} app.jar

ENV GOOGLE_ID=${GOOGLE_ID}
ENV GOOGLE_SECRET=${GOOGLE_SECRET}
ENV KAKAO_ID=${KAKAO_ID}
ENV KAKAO_SECRET=${KAKAO_SECRET}

ENTRYPOINT ["java", "-jar", "/app.jar"]